<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.srichomthong.savetogether.center.BaseAuthFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlueDtac">
        <View
            android:id="@+id/line_left"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"/>

        <View
            android:id="@+id/line_right"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginEnd="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="@string/app_name_double_line"/>

        <TextView
            android:id="@+id/txt_language_setting"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/app_message_language"/>

        <RelativeLayout
            android:id="@+id/relative_restaurant"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@+id/txt_app_name">

            <ImageView
                android:id="@+id/img_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="25dp"
                android:src="@drawable/ic_oval_pink" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/auth_message_im_the_restaurant"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_consumer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/txt_app_name">
            <RelativeLayout
                android:id="@+id/relative_customer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true">
                <ImageView
                    android:id="@+id/img_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="25dp"
                    android:src="@drawable/ic_oval_yellow" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="@string/auth_message_im_consumer"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>