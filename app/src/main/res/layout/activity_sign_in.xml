<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/sign_in_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_customer_theme"
    tools:context="me.srichomthong.savetogether.center.SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_auth_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo"/>
        <TextView
            android:id="@+id/sign_in_txt_title"
            android:layout_below="@id/img_auth_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:layout_marginBottom="30dp"
            android:text="@string/app_name"/>

        <ImageView
            android:id="@+id/img_google_sign_in"
            android:layout_below="@+id/sign_in_txt_title"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:src="@drawable/ic_google_sign_in"/>

        <ImageView
            android:id="@+id/img_facebook_sign_in"
            android:layout_below="@+id/img_google_sign_in"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="2dp"
            android:src="@drawable/ic_facebook_sign_in"/>

        <ImageView
            android:id="@+id/img_email_sign_in"
            android:layout_below="@+id/img_facebook_sign_in"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="2dp"
            android:src="@drawable/ic_email_sign_in"/>

        <ImageView
            android:id="@+id/img_phone_sign_in"
            android:layout_below="@+id/img_email_sign_in"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="2dp"
            android:src="@drawable/ic_phone_sign_in"/>


        <TextView
            android:id="@+id/txt_sign_in_back"
            android:text="@string/app_message_back"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
