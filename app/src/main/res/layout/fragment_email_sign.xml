<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.srichomthong.savetogether.center.EmailSignFragment">

    <RelativeLayout
        android:id="@+id/relative_email_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/email_sign_app_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/email_sign_title"
            android:layout_below="@+id/email_sign_app_logo"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:text="@string/auth_message_with_email"/>

        <EditText
            android:id="@+id/email_sign_field_email"
            android:layout_below="@+id/email_sign_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/prompt_email"
            style="@style/button_round_style"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/email_sign_field_password"
            android:layout_below="@+id/email_sign_field_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/prompt_password"
            style="@style/button_round_style"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword" />

        <View
            android:id="@+id/email_sign_line"
            android:layout_below="@+id/email_sign_field_password"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBlueDtac"/>

        <EditText
            android:id="@+id/email_sign_field_repassword"
            android:layout_below="@+id/email_sign_line"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/prompt_repassword"
            style="@style/button_round_style"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="25dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/email_sign_button_sign_in"
            android:layout_below="@+id/email_sign_field_repassword"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            style="@style/button_huge_round_style"
            android:text="@string/common_signin_button_text" />


        <Button
            android:id="@+id/email_sign_button_sign_up"
            android:layout_below="@+id/email_sign_field_repassword"
            android:layout_toRightOf="@+id/email_sign_button_sign_in"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            style="@style/button_huge_round_style"
            android:textSize="15sp"
            android:text="@string/auth_message_sign_up" />

        <TextView
            android:id="@+id/txt_email_sign_back"
            android:text="@string/app_message_back"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>
