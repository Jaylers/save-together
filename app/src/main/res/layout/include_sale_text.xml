<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sale_item_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:src="@drawable/ic_facebook_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/sale_item_photo"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sale_item_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="My First Post" />

        <TextView
            android:id="@+id/sale_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_shop_detail" />

        <TextView
            android:id="@+id/sale_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_shop_detail" />

        <TextView
            android:id="@+id/sale_item_end_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_shop_detail" />
    </LinearLayout>

    <TextView
        android:id="@+id/sale_item_body"
        android:layout_below="@+id/sale_item_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:maxHeight="50dp"
        android:padding="5dp"
        tools:text="@string/app_shop_detail" />

</RelativeLayout>
