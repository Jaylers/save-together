<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver"
    tools:context="me.srichomthong.savetogether.restaurant.NewSaleActivity">

    <TextView
        android:id="@+id/txt_new_sale_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:text="@string/app_message_new_sale" />

    <TextView
        android:id="@+id/sale_shop_title"
        android:layout_below="@+id/txt_new_sale_title"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_shop_name"/>

    <EditText
        android:id="@+id/sale_item_name"
        android:layout_below="@+id/sale_shop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/app_message_product_name"
        android:maxLines="1"
        style="@style/button_round_style"/>

    <EditText
        android:id="@+id/sale_item_full_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_item_name"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:hint="@string/app_message_product_full_price"
        android:textAlignment="textStart"
        style="@style/button_round_style"
        android:maxLines="10"
        android:minLines="1"
        android:inputType="number"
        android:scrollHorizontally="false" />

    <EditText
        android:id="@+id/sale_item_new_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_item_full_price"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:hint="@string/app_message_product_new_price"
        android:textAlignment="textStart"
        style="@style/button_round_style"
        android:maxLines="10"
        android:minLines="1"
        android:inputType="number"
        android:scrollHorizontally="false" />

    <EditText
        android:id="@+id/sale_item_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_item_new_price"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:hint="@string/app_message_product_count"
        android:textAlignment="textStart"
        style="@style/button_round_style"
        android:maxLines="10"
        android:minLines="1"
        android:inputType="number"
        android:scrollHorizontally="false" />

    <TextView
        android:id="@+id/sale_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sale_item_count"
        android:text="@string/app_message_end_sale" />
    <Button
        android:id="@+id/sale_item_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/sale_date_txt"
        android:layout_below="@+id/sale_item_count"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_border_round"
        android:text="@string/app_date_please_select" />

    <EditText
        android:id="@+id/sale_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_item_date_btn"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:hint="@string/app_message_product_detail"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        style="@style/button_round_style"
        android:maxLines="10"
        android:minLines="4"
        android:scrollHorizontally="false" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_plus"/>

    <TextView
        android:id="@+id/new_sale_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_message_back"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="20dp"/>

</RelativeLayout>
