<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver_gray"
    tools:context="me.srichomthong.savetogether.center.fragment.MenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/relative_group_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_menu_profile_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/ic_user" />

            <ImageView
                android:id="@+id/fragment_menu_setting_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_settings"
                android:padding="20dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/fragment_menu_announce_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/ic_megaphone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relative_group_two"
            android:layout_below="@+id/relative_group_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/fragment_menu_privacy_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/ic_privacy" />

            <ImageView
                android:id="@+id/fragment_menu_notification_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_notification"
                android:padding="20dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/fragment_menu_report_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="20dp"
                android:src="@drawable/ic_error_report"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relative_group_there"
            android:layout_below="@+id/relative_group_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/fragment_menu_care_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/ic_customer_care" />

            <ImageView
                android:id="@+id/fragment_menu_facebook_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_facebook_circle"
                android:padding="20dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/fragment_menu_g_plus_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="20dp"
                android:src="@drawable/ic_google_plus_circle"
                android:layout_weight="1"/>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
