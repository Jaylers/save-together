<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_customer_theme"
    tools:context="me.srichomthong.savetogether.center.RestaurantSignInFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_auth_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_below="@id/img_auth_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:text="@string/app_name"/>

        <ImageView
            android:id="@+id/img_google_sign_in"
            android:layout_below="@+id/txt_title"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_google_sign_in"/>

        <ImageView
            android:id="@+id/img_facebook_sign_in"
            android:layout_below="@+id/img_google_sign_in"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:src="@drawable/ic_facebook_sign_in"/>

        <ImageView
            android:id="@+id/img_email_sign_in"
            android:layout_below="@+id/img_facebook_sign_in"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:src="@drawable/ic_email_sign_in"/>

        <TextView
            android:id="@+id/txt_cus_back"
            android:text="@string/app_message_back"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>
