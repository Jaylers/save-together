<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_customer_theme"
    tools:context="me.srichomthong.savetogether.center.RestaurantSignInFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_auth_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_below="@id/img_auth_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:text="@string/app_name"/>

        <EditText
            android:id="@+id/edt_customer_username"
            android:layout_below="@id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textAlignment="center"
            android:inputType="textAutoComplete"
            style="@style/button_square_style"
            android:hint="@string/auth_message_username"/>

        <EditText
            android:id="@+id/edt_customer_password"
            android:layout_below="@+id/edt_customer_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textAlignment="center"
            android:inputType="text"
            style="@style/button_square_style"
            android:hint="@string/app_message_password"/>

        <Button
            android:id="@+id/btn_customer_sign_in"
            android:layout_below="@+id/edt_customer_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            style="@style/button_round_style"
            android:text="@string/action_sign_in_short"/>

        <ImageButton
            android:id="@+id/btn_customer_gmail"
            android:layout_below="@+id/btn_customer_sign_in"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"/>

        <ImageButton
            android:id="@+id/btn_customer_facebook"
            android:layout_below="@+id/btn_customer_gmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"/>

        <ImageButton
            android:id="@+id/btn_customer_phone_number"
            android:layout_below="@+id/btn_customer_facebook"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"/>

        <TextView
            android:id="@+id/txt_cus_back"
            android:text="@string/app_message_back"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>
